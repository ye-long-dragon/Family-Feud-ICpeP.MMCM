<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Question Platform</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <!-- User Profile -->
        <div class="user-profile">
            <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/facc1b7c-25f7-43c0-a377-3b6dcae8962c.png" alt="User profile avatar showing a person with polished professional appearance against a neutral background" class="user-avatar">
            <h5 class="mb-1">John Doe</h5>
            <small class="text-light opacity-75">Administrator</small>
        </div>

        <!-- Navigation Links -->
        <div class="nav flex-column mb-4">
            <a href="#" class="nav-link active">
                <i class="bi bi-house-door me-2"></i>
                Home
            </a>
            <a href="#" class="nav-link">
                <i class="bi bi-person me-2"></i>
                Profile
            </a>
            <a href="#" class="nav-link">
                <i class="bi bi-gear me-2"></i>
                Settings
            </a>
        </div>

        <!-- Add Question Button -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addQuestionModal">
            Add Question
        </button>

        <!-- Spacer to push logout to bottom -->
        <div class="flex-grow-1"></div>

        <!-- Logout Button -->
        <button class="logout-btn">
            <i class="bi bi-box-arrow-right me-2"></i>
            Log Out
        </button>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container-fluid">
            <!-- Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <h1 class="display-4 fw-bold text-dark mb-2">Question Platform</h1>
                    <p class="text-muted">Manage your questions and content with ease</p>
                </div>
            </div>

            <!-- Start Game Button-->
             
                <div class="row mb-4">
                <div class="col-12 d-flex justify-content-center">
                    <button id="startGameBtn" class="btn btn-success btn-lg">
                    Start Game
                    </button>
                </div>
                </div>


            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-3 rounded">
                                    <i class="bi bi-question-circle text-primary fs-3"></i>
                                </div>
                                <div class="ms-3">
                                    <h4 class="mb-0 fw-bold">128</h4>
                                    <small class="text-muted">Total Questions</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>

          
            <!-- Questions List -->
            <div id="questionsContainer">
                <%- include('template/questionList') %>
            </div>
            

        </div>
    </div>
    <%- include('modal/addquestion') %>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="/js/dashboard.js"></script>
    

    
</body>
</html>

