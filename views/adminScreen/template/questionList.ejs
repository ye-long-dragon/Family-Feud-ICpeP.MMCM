<div class="card border-0 shadow-sm">
  <div class="card-header bg-white">
    <h5 class="card-title mb-0">Questions</h5>
  </div>
  <div class="card-body">
    <% if (questions.length === 0) { %>
      <div class="alert alert-warning mb-0" role="alert">
        No questions found.
      </div>
    <% } else { %>
      <div class="list-group list-group-flush" id="questionsList">
        <% questions.forEach((q, index) => { %>
          <div class="list-group-item border-0" data-index="<%= index %>" data-id="<%= q._id %>">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h6 class="mb-1"><%= q.question %></h6>
                <ul class="mb-1 ps-3">
                  <% q.answers.forEach(answer => { %>
                    <li><%= answer.answer %> (<%= answer.points %> pts)</li>
                  <% }) %>
                </ul>
              </div>
              <div class="btn-group btn-group-sm" role="group" aria-label="Question actions">
                <button type="button" class="btn btn-outline-primary edit-btn" data-id="<%= q._id %>">Edit</button>
                <button type="button" class="btn btn-outline-secondary up-btn" data-index="<%= index %>" <%= index === 0 ? 'disabled' : '' %>>Up</button>
                <button type="button" class="btn btn-outline-secondary down-btn" data-index="<%= index %>" <%= index === questions.length - 1 ? 'disabled' : '' %>>Down</button>
                <button type="button" class="btn btn-outline-danger delete-btn" data-id="<%= q._id %>">Delete</button>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</div>